{
	"compilerOptions": {
		"baseUrl": ".",
		"sourceMap": true,
		"inlineSourceMap": false,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": false,
		"strictFunctionTypes": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"downlevelIteration": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2020"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}
